<?xml version="1.0"?>
<ruleset name="Calculator Project">
    <description>Code style regels voor het Calculator project</description>
    
    <!-- Welke bestanden controleren -->
    <file>src</file>
    <file>tests</file>
    
    <!-- Negeer vendor map -->
    <exclude-pattern>vendor/*</exclude-pattern>
    
    <!-- Gebruik PSR-12 standaard -->
    <rule ref="PSR12"/>
    
    <!-- Gebruik 4 spaties voor inspringen -->
    <arg name="tab-width" value="4"/>
    
    <!-- Toon kleuren in output -->
    <arg name="colors"/>
    
    <!-- Toon progressie -->
    <arg value="p"/>
</ruleset>